<p id="notice"><%= notice %></p>

<h1>Admins</h1>

<table>
  <thead>

      <div id="main-container" class="container-fluid">
        <div class="row" style="border: 1px solid black;">
          <div class="col-xs-3">
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.Username %></td>
        <td><%= admin.Password %></td>
        <td><%= link_to 'Show', admin, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_admin_path(admin), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>

      </tr>
    <% end %>
  </tbody>
</table>
    </div>
      <div class="col-xs-9">
<%= link_to 'New Admin', new_admin_path %>
      </div>
    </div>
  </div>

</body>

