<p id="notice"><%= notice %></p>

<h1>TEACHERS COHORTS</h1>

<table class="table table-hover">
  <thead>
    <div class="row" style="border: 1px solid black;"></div>
    <tr>
      <th>Teacher id</th>
      <th>Cohort id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teacher_cohorts.each do |teacher_cohort| %>
      <tr>
        <td><%= teacher_cohort.Teacher_ID %></td>
        <td><%= teacher_cohort.Cohort_ID %></td>
        <td><%= link_to 'Show', teacher_cohort %></td>
        <td><%= link_to 'Edit', edit_teacher_cohort_path(teacher_cohort) %></td>
        <td><%= link_to 'Destroy', teacher_cohort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Teacher Cohort', new_teacher_cohort_path, class: 'btn btn-success btn-xs'   %>
